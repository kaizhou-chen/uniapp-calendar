{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "日历"
			}
		},
		{
			"path": "pages/today/today",
			"style": {
				"navigationBarTitleText": "今天"
			}
		},
		{
			"path": "pages/add/add",
			"style": {
				"navigationBarTitleText": ""
			}
		},
		{
			"path": "pages/create/create",
			"style": {
				"navigationBarTitleText": "新建日程"
			}
		},
		{
			"path": "pages/edit/edit",
			"style": {
				"navigationBarTitleText": "编辑日程"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	// 设置 TabBar
	"tabBar": {
		"color": "#333",
		"selectedColor": "#27ba9b",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [
			{
				"text": "今天",
				"pagePath": "pages/today/today",
				"iconPath": "static/tabs/return.png",
				"selectedIconPath": "static/tabs/return.png"
			},
			{
				"text": "月",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabs/grid.png",
				"selectedIconPath": "static/tabs/grid_selected.png"
			},
			{
				"text": "",
				"pagePath": "pages/add/add",
				"iconPath": "static/tabs/plus.png",
				"selectedIconPath": "static/tabs/plus.png"
			}
		]
	}
}